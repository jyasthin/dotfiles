"---------------------------------------------------------------------------
" メニュー関連
"
set guioptions-=T
set guioptions-=m


"---------------------------------------------------------------------------
" 表示関連
"
set cmdheight=1

set lines=40
set columns=120

" タブを常に表示させる
set showtabline=2


"---------------------------------------------------------------------------
" 色関連(solarized)
"
let g:solarized_italic=0

syntax enable
set background=light
colorscheme solarized
